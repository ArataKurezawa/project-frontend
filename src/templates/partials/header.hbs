<header class="header">
  <div class="header__left">
    <div class="logo">
      <img src="/src/assets/images/logo.png" alt="Логотип" width="48" height="48" />
    </div>
    <div class="header__fio">
      {{user.fio}}
    </div>
  </div>
  <div class="header__right">
    <button class="burger-btn" aria-label="Открыть меню">
      <span class="burger-icon"><span></span></span>
    </button>
  </div>
</header>


<div class="burger-menu">
  <div class="burger-menu__content">
    <div class="burger-menu__top">
      <img class="burger-menu__logo" src="/src/assets/images/logo.png" alt="Логотип" width="64" height="64" />
      <span class="burger-menu__title">Задание<br>выполнил</span>
    </div>
    <div class="burger-menu__fio">
      {{user.lastName}}<br>
      {{user.firstName}} {{user.middleName}}
    </div>
    <div class="burger-menu__desc">{{user.description}}</div>
    <div class="burger-menu__phone">{{user.contacts.phone}}</div>
    <a class="burger-menu__social" href="{{user.contacts.telegram}}" target="_blank">Telegram</a>
  </div>
</div>
